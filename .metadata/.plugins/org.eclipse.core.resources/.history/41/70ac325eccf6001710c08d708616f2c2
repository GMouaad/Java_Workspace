//						counter++;
//						repaint();
//					}
//					else
//					{
//						genericTestArray[counter] = new SchellongTest("Test"+(counter +1));
//						comboBox.addItem(genericTestArray[counter]);
//						comboBox.setSelectedItem(genericTestArray[counter]);
//						actualTest = genericTestArray[counter];
//						counter++;
//						repaint();
//					}
				}
			}
		});
